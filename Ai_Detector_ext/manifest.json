{
    "manifest_version": 3,
    "name": "AI Image Detector",
    "version": "1.0",
    "description": "Automatically detects AI-generated images on Google search results (Always ON).",
    "permissions": ["storage"],
    "host_permissions": [
        "*://www.google.com/search?*",
        "*://*/*"
    ],
    "action": {
        "default_title": "AI Image Detector"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["*://www.google.com/search?*"],
            "js": ["content_script.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "tfjs_model/*", 
                "tf_core.js", 
                "tf_layers.js"
            ],
            "matches": ["*://www.google.com/*"]
        }
    ]
}
